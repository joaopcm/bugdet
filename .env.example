# =============================================================================
# Bugdet Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit your .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
# Data Encryption Key (32-byte hex): openssl rand -hex 32
DATA_ENCRYPTION_KEK=your-encryption-key-here
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
# Upload password encryption (32-byte hex): openssl rand -hex 32
UPLOAD_PASSWORD_ENCRYPTION_KEY=your-encryption-key-here

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# For local development with Docker: postgresql://postgres:postgres@localhost:5432/budget
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/budget

# -----------------------------------------------------------------------------
# Authentication (better-auth)
# -----------------------------------------------------------------------------
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# AI Gateway (Vercel)
# -----------------------------------------------------------------------------
# Get this from https://vercel.com/docs/ai-gateway
AI_GATEWAY_API_KEY=your-ai-gateway-key

# -----------------------------------------------------------------------------
# Supabase (File Storage)
# -----------------------------------------------------------------------------
# Get these from your Supabase project settings > API
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_URL=https://your-project.supabase.co

# -----------------------------------------------------------------------------
# Upstash Redis (Rate Limiting & Caching)
# -----------------------------------------------------------------------------
# Get these from https://console.upstash.com/
UPSTASH_REDIS_REST_TOKEN=your-redis-token
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io

# -----------------------------------------------------------------------------
# Resend (Email)
# -----------------------------------------------------------------------------
# Get these from https://resend.com/
RESEND_API_KEY=re_your-resend-key
RESEND_WAITLIST_SEGMENT_ID=your-segment-id

# -----------------------------------------------------------------------------
# Trigger.dev (Background Jobs)
# -----------------------------------------------------------------------------
# Get this from your Trigger.dev project settings
TRIGGER_SECRET_KEY=tr_dev_your-trigger-key

# -----------------------------------------------------------------------------
# Admin / Backoffice
# -----------------------------------------------------------------------------
# Generate a secure key: openssl rand -base64 32
BACKOFFICE_API_KEY=your-backoffice-api-key
